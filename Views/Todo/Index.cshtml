@{
    ViewData["Title"] = "List of todos";
}
@model List<manoj.Models.TodoModel>;
<style>
    h2 {
        text-align: center;
    }
</style>
 

    <h2>Todo List</h2>

    <table class="table">
        <tbody>
            @foreach (var todo in Model)
            {
                <tr>
                    <td>@todo.Name</td>
                    <td>
                        <a asp-controller="Todo" asp-action="Delete" asp-route-id="@todo.Id">
                            Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>
        @if (@Model.Count() == 0)
        {

        }
    </table>
